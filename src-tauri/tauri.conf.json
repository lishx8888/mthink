{
  "$schema": "https://schema.tauri.app/config/1.5",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": ".",
    "distDir": ".",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "思维导图应用",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "nsis",
      "identifier": "com.mthink.app",
      "icon": [
        "icons/icon.ico"
      ],
      "windows": {
        "nsis": {
          "oneClick": true,
          "perMachine": false,
          "allowElevation": true,
          "allowToChangeInstallationDirectory": false,
          "installerIcon": "icons/icon.ico",
          "uninstallerIcon": "icons/icon.ico",
          "installerHeaderIcon": "icons/icon.ico",
          "createDesktopShortcut": true,
          "createStartMenuShortcut": true,
          "shortcutName": "思维导图应用",
          "runAfterFinish": true
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:"
    },
    "windows": [
      {
        "title": "思维导图应用",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}